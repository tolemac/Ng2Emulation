{
	"compilerOptions": {
		"declaration": true,
		"module": "system",
		"target": "es5",
		"noImplicitAny": false,
		"outDir": "dist",        
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "noResolve": true,
        "diagnostics": true,
        "listFiles": true
	},
    "exclude": [
        ".vscode",
        "demos",               
        "dist",
        "node_modules"
    ]
}